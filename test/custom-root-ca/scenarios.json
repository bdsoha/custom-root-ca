{
    "custom": {
        "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
        "features": {
            "custom-root-ca": {
                "name": "custom.crt",
                "bundle": false
            }
        }
    },
    "alpine": {
        "image": "mcr.microsoft.com/devcontainers/base:alpine",
        "features": {
            "custom-root-ca": {}
        }
    },
    "multiple": {
        "image": "mcr.microsoft.com/devcontainers/base:alpine",
        "features": {
            "custom-root-ca": {
                "name": "custom.sub.crt",
                "source": "https://netfree.link/cacert/isp/018/ca.crt,https://netfree.link/cacert/isp/019/ca.crt"
            }
        }
    }
}
